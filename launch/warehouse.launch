<?xml version="1.0" encoding="UTF-8"?>

<launch>

  <env name="GAZEBO_MODEL_PATH" value="$(find my_sml)/models"/>

  <!-- Argument -->
  <arg name="world" default="$(find my_sml)/world/warehouse.world"/>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="debug" default="false"/>
  <arg name="recording" default="false"/>
  <arg name="extra_gazebo_args" default="--verbose"/>

  <!-- Gazebo empty world launch -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world)"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="recording" value="$(arg recording)"/>
    <arg name="extra_gazebo_args" value="$(arg extra_gazebo_args)"/>
  </include>  

<param name="robot_description" command="$(find xacro)/xacro --inorder '$(find my_sml)/urdf/conveyor_belt.urdf.xacro'" />
<node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model conveyor_belt -param robot_description -x -2 -y -0 -z -0 -Y 1.570796"/>

  <!-- Run rviz-->
  <!-- <node type="rviz" name="rviz" pkg="rviz" args="-d $(find my_sml)/config/kinect_view.rviz" /> -->

</launch>